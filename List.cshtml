@model IEnumerable<AjaxCRUD.Models.Student>

@{
    ViewBag.Title = "List";
    Layout = null;
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
        <th>
            <a onclick="showInPopup('@Url.Action("CreateOrEdit","Students",null,Context.Request.Url.Scheme)','New Student')" class="btn btn-success text-white"><i class="fa fa-plus" aria-hidden="true"></i>
                new student
            </a>
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Age)
        </td>
        <td>
            <a onclick="showInPopup('@Url.Action("CreateOrEdit","Students",new { id=item.ID},Context.Request.Url.Scheme)','Edit Student')" class="btn btn-success text-white"><i class="fas fa-edit"></i></a>
            <a onclick="Delete('@Url.Action("Delete","Students",new { id=item.ID},Context.Request.Url.Scheme)')" class="btn btn-success text-white"><i class="far fa-trash-alt"></i></a>
        </td>
    </tr>
}

</table>
